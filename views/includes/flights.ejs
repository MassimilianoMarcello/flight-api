<div class="flight-list">
    <h2>Our Flights</h2>
  
    <table>
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Price</th>
                <th>Leaving at</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(flight => { %>
                <tr>
                    <td><%= flight.departure %></td>
                    <td><%= flight.arrive %></td>
                    <td>€<%= flight.price.toFixed(2) %></td>
                    <td><%= flight.time %></td>
                    <td><a href="/api/flights/<%= flight.id %>" class="view-product-btn">Details</a></td>
                    <td>
                        <% if (token) { %> <!-- Controlla se il token è presente -->
                            <form action="/api/delete/<%= flight.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this flight?');">Delete</button>
                            </form>
                        <% } else { %>
                            <button disabled title="You must be logged in to delete a flight">Delete</button>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>


